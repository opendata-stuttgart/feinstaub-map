@import '_settings'
variables()
normalize-css()
base()
typography()
components()

body, #content
	height 100%
	width 100%
	margin 0
	overflow hidden

#content
	background-color $clr-grey-50
	display flex
	justify-content column
	
.map
	height 100vh
	flex 1 0

#cell-info
	width 310px
	background-color $clr-blue-grey-900
	color $clr-grey-50
	padding .5rem
	overflow-y auto
	height 100vh
	font-size 1.5rem
	h3, td
		font-weight 200
	h3
		font-size 2.5rem
	table
		width 100%
		margin-right 1rem
		border-collapse collapse
		border-bottom 1px solid $clr-grey-50
	td
		text-align right
		padding-right 5px
		border-width 0px 1px 0px 1px;
		border-style solid;
		border-color $clr-grey-50;
	th
		font-weight 300
		border 1px solid $clr-grey-50
		border-bottom 2px solid $clr-grey-50
	.mean
		border-bottom 1px solid $clr-grey-50

.leaflet-pane > svg .d3-overlay path
	pointer-events all

.leaflet-control
	margin-top 110px !important

.d3-tip
	font-family monospace
	font-size 0.4rem

	border-radius 3px
	background-color $clr-blue-grey-900
	color $clr-grey-50
	z-index 500
	font-weight 200
	text-align right

img.leaflet-tile 
	filter  grayscale(85%) saturate(150%) hue-rotate(60deg) contrast(90%) brightness(110%) 
